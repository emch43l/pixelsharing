            </label>
            {{ form_widget(form.title, {'attr' : {'class' : 'input input-bordered w-full'}}) }}
        </div>
        <div class="form-control w-full mt-10">
            <label class="label">
                <span class="label-text">Pick your pixel image</span>
                <span class="label-text-alt">.JPG .JPEG .PNG</span>
            </label>
            {{ form_widget(form.image, {'attr' : {'class' : 'file-input w-full'}}) }}
