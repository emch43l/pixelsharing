{% extends 'base.html.twig' %}

{% block body %}

    <div class="px-8 md:px-28">
        <div class="mt-20">
            <div class="shadow-lg">
                <div class="p-4 bg-base-100 rounded-t-md">
                    <div class="flex justify-between items-center">
                        <div>
                            <div>
                                <div class="flex h-20">
                                    <div class="w-20 rounded-md overflow-hidden">
                                        <img class="w-full h-full object-cover" src="{{ asset('build/images/userProfileImage.abac95e5.jpg') }}">
                                    </div>
                                    <div class="h-full w-1 mx-4 bg-base-200"></div>
                                    <div class="text-xs">
                                        <div>
                                            <span class="text-accent-content text-2xl font-bold">{{ image.title }}</span>
                                        </div>
                                        <div class="flex h-4 mt-1">
                                            <div>
                                                <span class="font-semibold">{{ image.updatedAt|date("m/d/Y")  }}</span>
                                            </div>
                                            <div class="bg-base-200 h-full w-0.5 mx-2"></div>
                                            <div>
                                                <span class="font-semibold bg-base-300 px-2 py-1 rounded-md">{{ image.category.name }}</span>
                                            </div>
                                        </div>
                                        <div class="">
                                            <div>
                                                <span class="text-accent-content font-bold text-lg">
                                                    {{ image.user.username }}
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="flex h-16 mr-2">
                                <div>
                                    <button class="w-16 h-full btn text-secondary text-xl">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </div>
                                <div class="ml-2">
                                    <button class="w-16 h-full btn text-xl">
                                        <i class="fas fa-heart-broken"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-base-300">
                    <img class="mx-auto" src="{{ vich_uploader_asset(image) }}">
                </div>
            </div>
        </div>
    </div>

{% endblock %}