            <table class="table table-zebra w-full">
                <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Operations</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td></td>
                        <td>{{ category.name }}</td>
                        <td>adsad</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

{% endblock %}
