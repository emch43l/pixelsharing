{% if pageCount > 1 %}
    <div class="flex justify-center">
        <div class="btn-group">
            {% if first is defined and current != first %}
                <a class="btn" href="{{ path(route, query|merge({(pageParameterName): first})) }}">
                    <i class="fas fa-angle-double-left"></i>
                </a>
            {% endif %}

            {% if previous is defined %}
                <a rel="prev" class="btn" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                    <i class="fas fa-angle-left"></i>
                </a>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <a class="btn" href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                        {{ page }}
                    </a>
                {% else %}
                    <div class="btn bg-base-300">{{ page }}</div>
                {% endif %}
            {% endfor %}

            {% if next is defined %}
                <a rel="next" class="btn" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                    <i class="fas fa-angle-right"></i>
                </a>
            {% endif %}

            {% if last is defined and current != last %}
                <a class="btn" href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                    <i class="fas fa-angle-double-right"></i>
                </a>
            {% endif %}
        </div>
    </div>
{% endif %}
